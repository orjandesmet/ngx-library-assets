{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "dist",
        "rootDir": "src",
        "module": "commonjs",
        "target": "es5",
        "types": [
            "node"
        ],
        "lib": [
            "es2015",
            "es2017"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "example/**/*.ts"
    ]
}